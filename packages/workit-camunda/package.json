{
  "name": "workit-camunda",
  "version": "0.0.4-beta.0",
  "description": "Worker for Node.js system with pluggable Camunda clients that work with both Zeebe and Camunda platform powered by TypeScript",
  "author": "Olivier Albertini <olivier.albertini@ville.montreal.qc.ca>",
  "homepage": "https://github.com/VilledeMontreal/workit#readme",
  "license": "MIT",
  "main": "lib/src/index.js",
  "typings": "lib/src/index.d.ts",
  "dependencies": {
    "axios": "~0.19.0",
    "camunda-external-task-client-js": "~1.1.1",
    "debug": "~4.1.1",
    "fast-safe-stringify": "~2.0.6",
    "form-data": "~2.4.0",
    "inversify": "~5.0.1",
    "opentracing": "0.14.3",
    "reflect-metadata": "~0.1.13",
    "zeebe-node": "~1.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/axios": "0.14.0",
    "@types/debug": "^4.1.4",
    "@types/events": "^3.0.0",
    "@types/form-data": "2.2.1",
    "@types/jest": "^24.0.15",
    "@types/nock": "^10.0.3",
    "@types/node": "^12.0.8",
    "husky": "^2.4.1",
    "jaeger-client": "^3.15.0",
    "jest": "^24.8.0",
    "nock": "^10.0.6",
    "prettier": "^1.18.2",
    "prettier-tslint": "^0.4.2",
    "source-map-support": "^0.5.12",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  },
  "engines": {
    "node": ">=8.11.4"
  },
  "scripts": {
    "test": "jest",
    "compile": "rm -rf ./lib/ && npm run build",
    "build": "tsc -p ./tsconfig.json",
    "watch": "tsc -p ./tsconfig.json --watch",
    "lint": "tslint --project ./tsconfig.json && prettier -l \"src/**/*.ts\"",
    "lint-fix": "tslint --project ./tsconfig.json --fix && prettier \"src/**/*.ts\" --write",
    "docs": "typedoc --out ../../docs --tsconfig ./tsconfig.json --excludePrivate --mode file",
    "camunda:deploy": "node ./lib/sample/deploy.js",
    "camunda:create-instance": "node ./lib/sample/create-process-instances.js",
    "camunda:worker": "node ./lib/sample/worker.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test"
    }
  },
  "keywords": [
    "Ville de Montreal",
    "Typescript",
    "Camunda",
    "Zeebe",
    "Opentracing",
    "Worker"
  ],
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VilledeMontreal/workit.git"
  },
  "bugs": {
    "url": "https://github.com/VilledeMontreal/workit/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
