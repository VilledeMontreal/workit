{
  "packages": [
    "packages/*",
    "services/*"
  ],
  "command": {
    "publish": {
      "npmClient": "npm",
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": ["*.lock"],
      "allowBranch": "master",
      "message": "chore(release): publish %s"
    },
    "bootstrap": {
      "npmClient": "npm"
    }
  },
  "changelog": {
    "repo": "VilledeMontreal/workit",
    "labels": {
      "enchancement": ":rocket:(Enhancement)",
      "bug": ":bug:(Bug Fix)",
      "doc": ":doc:(Refine Doc)",
      "feat": ":sparkles:(Feature)"
    },
    "cacheDir": ".changelog"
  },
  "useWorkspaces": true,
  "npmClient": "npm",
  "version": "independent"
}
