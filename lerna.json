{
  "lerna": "3.20.2",
  "version": "4.0.4",
  "packages": [
    "packages/*",
    "examples/*"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": ["*.lock"],
      "allowBranch": "master",
      "message": "chore(release): publish"
    }
  },
  "changelog": {
    "repo": "VilledeMontreal/workit",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: (Enhancement)",
      "bug": ":bug: (Bug Fix)",
      "core": ":wrench: Core",
      "documentation": ":books: (Refine Doc)",
      "feat": ":sparkles: (Feature)"
    },
    "cacheDir": ".changelog"
  },
  "npmClient": "yarn"
}
